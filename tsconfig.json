{
  "compilerOptions": {
    /* Basic Options */
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2022",
    "module": "commonjs",
    "allowUmdGlobalAccess": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "types"],

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "types", "**/*.test.ts", "tests/*"]
}
